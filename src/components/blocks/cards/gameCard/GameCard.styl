.GameCard {
  @extend $abstractCard;
  width: 140px;
  height: 176px;

  &--large {
    width: 210px;
    height: 264px;
  }

  &:hover {
    .GameCard__title {
      transform: translateY(0);
    }
    .GameCard__mask {
      opacity: 1;
    }
  }

  &__cover {
    background-repeat: no-repeat;
    height: 100%;
    background-size: 100% 100%;
    background-position: center;
  }

  &__mask,
  &__title {
    position: absolute;
    transition: all 210ms ease;

  }

  &__mask {
    height: 100%;
    width: 100%;
    top: 0;
    background-image: radial-gradient(circle at 49% 50%, rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.7));
    background-color: rgba(0, 0, 0, 0.1);
    opacity: 0;
  }

  &__title {
    overflow: hidden;
    color: white;
    bottom: 0px;
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.7));
    transform: translateY(100%);
    width: 100%;
    .Title {
      margin: 0 5px 10px;
      text-shadow: 0 0 3px $palette.black;
      display: block;
      font-weight: $font.bold;
      text-align: center;
    }
  }

  &__layer {
    display: none
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    padding: 20px
    background: rgba(22, 22, 22, .5);
  }
}
