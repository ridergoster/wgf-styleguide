$button {
  display inline-block
  background none
  padding 0
  margin 0
  border-width 0
  text-transform uppercase
  text-align: center;
  text-decoration: none;
}

$button-color = #57C9C1;
$button-color2 = #666;

.Button {
  @extend $button
  color: #ffffff;
  padding: 10px 15px;
  border-radius: 4px;
  background-color: $button-color;
  box-shadow: 0 5px 0 darken($button-color, 30%);
  outline 0
  margin-bottom: 5px

  &:hover,
  &:focus {
    background-color: darken($button-color, 10%);
    box-shadow: 0 5px 0 darken($button-color, 40%);
  }

  &--full {
    display: block;
    width: 100%;
  }
}

.iconButton {
  @extend $button;
  text-decoration none
  display inline-block
  width 40px
  height 40px
  color #fff
  line-height 40px
  font-size 20px
  text-align center
  border-radius 50%
  background-color $button-color2;
  transition all ease 500ms

  &--alt {
    background-color #50E3C2;
  }
}
