$Avatar = {
  colors: {
    boxShadowTOfficial: $palette.darkGrey,
    boxShadowTSocial: $palette.black
  },
  sizes: {
    user: 30 50 125,
    org: (35 30) (57 50) (142 125)
  }
}

.Avatar {
  display: inline-block;
  overflow: hidden;
  background-size: 100%;
  width: unit($Avatar.sizes.user[0],'px');
  height: @width;

  &__image {
    display: block;
    height: 100%;
  }

  &--user {
    box-shadow: 0 0 4px $Avatar.colors.boxShadowTOfficial;
    border-radius: 50%;

    .th--official & {
      box-shadow: 0 0 4px $Avatar.colors.boxShadowTOfficial;
    }
    .th--social & {
      box-shadow: 0 0 4px $Avatar.colors.boxShadowTSocial;
    }

    &.Avatar--small {
      width: unit($Avatar.sizes.user[0],'px');
      height: @width;
    }
    &.Avatar--medium {
      width: unit($Avatar.sizes.user[1],'px');
      height: @width;
    }
    &.Avatar--large {
      width: unit($Avatar.sizes.user[2],'px');
      height: @width;
    }
  }

  &--org {
    filter: drop-shadow(0 0 4px $Avatar.colors.boxShadowTOfficial);
    size:100%;

    .th--official & {
      filter: drop-shadow(0 0 4px $Avatar.colors.boxShadowTOfficial);
    }
    .th--social & {
      filter: drop-shadow(0 0 4px $Avatar.colors.boxShadowTSocial);
    }

    &.Avatar--small {
      width: unit($Avatar.sizes.org[0][0],'px');
      height: unit($Avatar.sizes.org[0][1],'px');
    }
    &.Avatar--medium {
      width: unit($Avatar.sizes.org[1][0],'px');
      height: unit($Avatar.sizes.org[1][1],'px');
    }
    &.Avatar--large {
      width: unit($Avatar.sizes.org[2][0],'px');
      height: unit($Avatar.sizes.org[2][1],'px');
    }
    .Avatar__image {
      mask: url("./orga_mask.svg");
      mask-box-image: url("./orga_mask.svg");
      display: block;
      height: 100%;
    }
  }
}
